@model Kalkulator.Models.BmiModel

@{
    var result = Model;
}

<div class="row jumbotron">
    <h1 class="col-sm-6">Kalkulator BMI</h1>
    <img src="~/Content/img/bmi.png" class="small-image col-sm-6" />
</div>

<div class="row">
    <div class="col-sm-4">
        @using (Html.BeginForm("Bmi", "Home", FormMethod.Post))
        {
            <div class="row">
                <div class="form-group col-sm-12">
                    @Html.LabelFor(m => m.Weight)
                    @Html.TextBoxFor(m => m.Weight, new { @class = "form-control", placeholder = "Podaj Wagę" })
                    @Html.ValidationMessageFor(m => m.Weight, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-sm-12">
                    @Html.LabelFor(m => m.Height)
                    @Html.TextBoxFor(m => m.Height, new { @class = "form-control", placeholder = "Podaj Wzrost" })
                    @Html.ValidationMessageFor(m => m.Height, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-sm-12">
                    <input type="submit" value="Szukaj" class="btn btn-info serachBtn" id="sbt_search" name="VALUE" onclick="showLoading" />
                </div>
            </div>
        }
    </div>
    <div class="col-sm-8">
        @if (result.Bmi != 0)
        {
            Html.RenderPartial("BmiResult", result);
        }
    </div>
</div>